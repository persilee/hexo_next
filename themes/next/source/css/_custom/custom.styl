    box-shadow: 0 0 3px #101010;
    margin: 25px -3%;
}

.highlight td {
    background-color: #222;
}

.highlight table {
    margin: 25px;
}

.highlight table>tbody>tr:nth-of-type(odd){
    background-color: #222;
}

pre, .highlight {
    background: #222222;
}

.highlight .code pre {
    background: #222222;
}

.highlight .gutter pre {
    background-color: rgba(0, 0, 0, 0.85);
    display: none;
}

