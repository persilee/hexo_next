.footer {
    background: transparent;
    color: #ccc;
}

.footer a {
    border-bottom-color: #555;
}

.footer a:hover {
    color: #f5f5f5;
    border-bottom-color: #f5f5f5;
}

.sidebar {
    background: #22222280;
}

.btn-bar {
